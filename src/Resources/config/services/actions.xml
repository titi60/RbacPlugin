<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service id="Titi60\SyliusRbacPlugin\Action\CreateAdministrationRoleViewAction">
            <argument type="service" id="Titi60\SyliusRbacPlugin\Provider\AdminPermissionsProvider" />
            <argument type="service" id="twig" />
        </service>

        <service id="Titi60\SyliusRbacPlugin\Action\CreateAdministrationRoleAction">
            <argument type="service" id="messenger.default_bus" />
            <argument type="service" id="Titi60\SyliusRbacPlugin\Normalizer\AdministrationRolePermissionNormalizer" />
            <argument type="service" id="session" />
            <argument type="service" id="router" />
        </service>

        <service id="Titi60\SyliusRbacPlugin\Action\UpdateAdministrationRoleViewAction">
            <argument type="service" id="Titi60\SyliusRbacPlugin\Provider\AdminPermissionsProvider" />
            <argument type="service" id="sylius_rbac.repository.administration_role" />
            <argument type="service" id="Titi60\SyliusRbacPlugin\Extractor\PermissionDataExtractor"/>
            <argument type="service" id="twig" />
            <argument type="service" id="router" />
            <argument type="service" id="session" />
        </service>

        <service id="Titi60\SyliusRbacPlugin\Action\UpdateAdministrationRoleAction">
            <argument type="service" id="messenger.default_bus" />
            <argument type="service" id="Titi60\SyliusRbacPlugin\Normalizer\AdministrationRolePermissionNormalizer" />
            <argument type="service" id="session" />
            <argument type="service" id="router" />
        </service>
    </services>
</container>
