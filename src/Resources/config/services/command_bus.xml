<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="false" autoconfigure="false" public="true" />

        <service id="Titi60\SyliusRbacPlugin\CommandHandler\CreateAdministrationRoleHandler">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sylius_rbac.custom_factory.administration_role"/>
            <argument type="service" id="Titi60\SyliusRbacPlugin\Validator\AdministrationRoleValidator" />
            <argument type="string">sylius_rbac_admin_administration_role_create</argument>
            <tag name="messenger.message_handler" handles="Titi60\SyliusRbacPlugin\Message\CreateAdministrationRole"/>
        </service>

        <service id="Titi60\SyliusRbacPlugin\CommandHandler\UpdateAdministrationRoleHandler">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="sylius_rbac.custom_factory.administration_role"/>
            <argument type="service" id="sylius_rbac.repository.administration_role"/>
            <argument type="service" id="Titi60\SyliusRbacPlugin\Validator\AdministrationRoleValidator"/>
            <argument type="string">sylius_rbac_admin_administration_role_update</argument>
            <tag name="messenger.message_handler" handles="Titi60\SyliusRbacPlugin\Message\UpdateAdministrationRole"/>
        </service>
    </services>
</container>
